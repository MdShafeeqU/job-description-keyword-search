{
    "manifest_version": 3,
    "name": "Skill Search",
    "version": "0.1.0",
    "action": {
        "default_popup": "src/index.html"
    },
    "content_scripts": [
        {
          "matches": ["http://*/*", "https://*/*"],
          "js": [
            "src/app.js"
          ]
        }
      ],
    "background": {
        "persistent": false,
        "service_worker": "src/script.js"
    },
    "permissions": [ 
        "storage",
        "notifications",
        "contextMenus",
        "http://localhost:8080/" 
    ],
    "externally_connectable": {
        "matches": ["<all_urls>"]
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    }  
}