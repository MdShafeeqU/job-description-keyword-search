{
    "manifest_version": 3,
    "name": "Skill Search",
    "version": "0.1.0",
    "description": "Seamlessly match keywords from job descriptions to your resume, optimizing your profile for the perfect career fit.",
    "action": {
        "default_popup": "src/index.html",
        "default_icon": "src/logo.png"
    },
    "content_scripts": [
        {
          "matches": ["http://*/*", "https://*/*"],
          "js": [
            "src/app.js"
          ]
        }
      ],
    "background": {
        "service_worker": "src/script.js"
    },
    "permissions": [ 
        "notifications",
        "contextMenus"
    ],
    "externally_connectable": {
        "matches": ["<all_urls>"]
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    }  
}